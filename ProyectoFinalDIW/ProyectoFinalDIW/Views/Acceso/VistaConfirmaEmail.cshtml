@{
    ViewData["Title"] = "Confirmar Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tienda de Suplementos</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    @*     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script> *@
    <!-- Fin Bootstrap -->
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/styleLogin.css" />
    <!-- Fin CSS -->
    <!-- Font awesome -->
    <link href="https://cdn.jsdelivr.net/gh/eliyantosarage/font-awesome-pro@main/fontawesome-pro-6.5.1-web/css/all.min.css" rel="stylesheet">
    <!-- Fin Font awesome -->
</head>
<body>
    <div class="wrapper">
        <form method="post" asp-controller="Acceso" asp-action="ConfirmaEmail" id="formularioMod">
            <h1>Confirmar cuenta</h1>
            <h4>Para activar la cuenta pulse el botón.</h4>
            <input type="text" name="nombre_usuario" style="display: none" value="" id="idToken">

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Mensaje"]
                </div>
            }

            @if (TempData["MensajeCorrecto"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["MensajeCorrecto"]
                </div>
            }
            
            <button type="submit" class="boton">Activar</button>
        </form>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const urlParams = new URLSearchParams(window.location.search).get("tk");
            const idTokenInput = document.getElementById('idToken');
            idTokenInput.value = urlParams;
        });
    </script>
</body>
</html>
