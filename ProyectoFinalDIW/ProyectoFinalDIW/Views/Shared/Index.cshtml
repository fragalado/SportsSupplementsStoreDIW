@{
    ViewData["Title"] = "Inicio Sesión";
}

<div class="wrapper" style="margin: 0 auto">
    <form action="">
        <h1>Inicio Sesión</h1>
        <div class="input-box">
            <input type="email" placeholder="Email" required>
            <i class="fa-solid fa-envelope"></i>
        </div>
        <div class="input-box">
            <input type="password" placeholder="Contraseña" required>
            <i class="fa-solid fa-lock"></i>
        </div>

        <div class="remember-forgot">
            <a asp-controller="LoginControlador" asp-action="VistaRecuperarContrasenya">¿Has olvidado la contraseña?</a>
        </div>

        <button type="submit" class="boton">Enviar</button>

        <div class="register-link">
            <p>¿Todavía no estás registrado? <a asp-controller="LoginControlador" asp-action="VistaRegister">Registrate</a></p>
        </div>
    </form>
</div>
