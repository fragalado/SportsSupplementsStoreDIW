@{
    ViewData["Title"] = "Inicio Sesión";
    Layout = null;
    var sesionCerrada = TempData["sesionCerrada"];
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tienda de Suplementos</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
@*     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script> *@
    <!-- Fin Bootstrap -->
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/styleLogin.css"/>
    <!-- Fin CSS -->
    <!-- Font awesome -->
    <link href="https://cdn.jsdelivr.net/gh/eliyantosarage/font-awesome-pro@main/fontawesome-pro-6.5.1-web/css/all.min.css" rel="stylesheet">
    <!-- Fin Font awesome -->
</head>
<body>
    <div class="wrapper">
        <form method="post" asp-controller="Login" asp-action="LoginUsuario">
            <h1>Inicio Sesión</h1>
            <div class="input-box">
                <input type="email" placeholder="Email" name="email_usuario" required>
                <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Contraseña" name="psswd_usuario" required>
                <i class="fa-solid fa-lock"></i>
            </div>

            <div class="remember-forgot">
                <a asp-controller="RestablecerPassword" asp-action="VistaRecuperarContrasenya">¿Has olvidado la contraseña?</a>
            </div>

            @if(ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            @if (sesionCerrada != null)
            {
                <div class="alert alert-success" role="alert">
                    @sesionCerrada
                </div>
            }

            <button type="submit" class="boton">Enviar</button>

            <div class="register-link">
                <p>¿Todavía no estás registrado? <a asp-controller="Registro" asp-action="VistaRegister">Registrate</a></p>
            </div>
        </form>
    </div>
</body>
</html>